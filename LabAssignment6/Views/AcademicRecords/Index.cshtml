@model IEnumerable<LabAssignment6.DataAccess.AcademicRecord>

@{
    ViewData["Title"] = "Academic Records";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-clipboard-data-fill me-2"></i>Academic Records</h1>
    <div>
        <a asp-action="EditAll" asp-route-sortOrder="@ViewData["CurrentSort"]" class="btn btn-success me-2">
            <i class="bi bi-pencil-square me-2"></i>Edit All Grades
        </a>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Create New
        </a>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["CourseSortParam"]" class="text-white text-decoration-none">
                                <i class="bi bi-sort-alpha-down me-1"></i>Course
                            </a>
                        </th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["StudentSortParam"]" class="text-white text-decoration-none">
                                <i class="bi bi-sort-alpha-down me-1"></i>Student
                            </a>
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Grade)
                        </th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.CourseCodeNavigation.Title)</strong>
                                <br />
                                <small class="text-muted">@Html.DisplayFor(modelItem => item.CourseCodeNavigation.Code)</small>
                            </td>
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.Student.Name)</strong>
                                <br />
                                <small class="text-muted">@Html.DisplayFor(modelItem => item.Student.Id)</small>
                            </td>
                            <td>
                                @if (item.Grade.HasValue)
                                {
                                    <span class="badge @(item.Grade >= 60 ? "bg-success" : item.Grade >= 50 ? "bg-warning text-dark" : "bg-danger") fs-6">
                                        @Html.DisplayFor(modelItem => item.Grade)%
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">No grade</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-studentId="@item.StudentId" asp-route-courseCode="@item.CourseCode" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-studentId="@item.StudentId" asp-route-courseCode="@item.CourseCode" 
                                   onclick="return confirm('Are you sure you want to delete this academic record?');" 
                                   class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
