@model IEnumerable<LabAssignment6.DataAccess.AcademicRecord>

@{
    ViewData["Title"] = "Edit All Grades";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-pencil-square me-2"></i>Edit All Grades</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Back to Records
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Bulk Grade Editor - Enter grades between 0 and 100</h5>
    </div>
    <div class="card-body p-0">
        <form asp-action="EditAll" method="post">
            <input type="hidden" name="sortOrder" value="@ViewData["CurrentSort"]" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger m-3" role="alert"></div>
            
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>
                                <a asp-action="EditAll" asp-route-sortOrder="@ViewData["CourseSortParam"]" class="text-white text-decoration-none">
                                    <i class="bi bi-sort-alpha-down me-1"></i>Course
                                </a>
                            </th>
                            <th>
                                <a asp-action="EditAll" asp-route-sortOrder="@ViewData["StudentSortParam"]" class="text-white text-decoration-none">
                                    <i class="bi bi-sort-alpha-down me-1"></i>Student
                                </a>
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Grade)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            var item = Model.ElementAt(i);
                            var gradeKey = $"[{i}].Grade";
                            var hasError = ViewData.ModelState.ContainsKey(gradeKey) && ViewData.ModelState[gradeKey]!.Errors.Count > 0;
                            var gradeError = hasError ? ViewData.ModelState[gradeKey]!.Errors[0].ErrorMessage : null;
                            <tr>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.CourseCodeNavigation.Title)</strong>
                                    <br />
                                    <small class="text-muted">@Html.DisplayFor(modelItem => item.CourseCodeNavigation.Code)</small>
                                </td>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.Student.Name)</strong>
                                    <br />
                                    <small class="text-muted">@Html.DisplayFor(modelItem => item.Student.Id)</small>
                                </td>
                                <td>
                                    <input type="hidden" name="[@i].StudentId" value="@item.StudentId" />
                                    <input type="hidden" name="[@i].CourseCode" value="@item.CourseCode" />
                                    <div class="input-group">
                                        <input type="number" name="[@i].Grade" value="@item.Grade" 
                                               class="form-control @(hasError ? "is-invalid" : "")" 
                                               min="0" max="100" placeholder="Enter grade (0-100)" />
                                        <span class="input-group-text">%</span>
                                    </div>
                                    @if (hasError)
                                    {
                                        <span class="text-danger field-validation-error mt-1 d-block">
                                            <i class="bi bi-exclamation-triangle me-1"></i>@gradeError
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <div class="card-footer bg-light p-3">
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle me-2"></i>Save All Grades
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

