@model LabAssignment6.DataAccess.Employee

@{
    ViewData["Title"] = "Edit Employee";
    var roles = ViewBag.Roles as List<LabAssignment6.DataAccess.Role> ?? new List<LabAssignment6.DataAccess.Role>();
    var employeeRoleIds = Model.Roles?.Select(r => r.Id).ToList() ?? new List<int>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-pencil-square me-2"></i>Edit Employee</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Employee Information</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-3">
                        <label asp-for="Id" class="form-label">Employee ID</label>
                        <input asp-for="Id" class="form-control" readonly />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter first name and last name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label"></label>
                        <input asp-for="UserName" class="form-control" placeholder="Enter network ID" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label class="form-label">@Html.DisplayNameFor(model => model.Roles)</label>
                        <div class="border rounded p-3 bg-light">
                            @foreach (var role in roles)
                            {
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" name="selectedRoles" value="@role.Id" id="role_@role.Id" 
                                           @(employeeRoleIds.Contains(role.Id) ? "checked" : "") />
                                    <label class="form-check-label" for="role_@role.Id">
                                        @role.Role1
                                    </label>
                                </div>
                            }
                        </div>
                        <span asp-validation-for="Roles" class="text-danger"></span>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-outline-secondary me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
