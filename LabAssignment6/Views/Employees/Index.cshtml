@model IEnumerable<LabAssignment6.DataAccess.Employee>

@{
    ViewData["Title"] = "Employees";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-people-fill me-2"></i>Employees</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Create New Employee
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Roles)
                        </th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                            </td>
                            <td>
                                <span class="badge bg-info text-dark">@Html.DisplayFor(modelItem => item.UserName)</span>
                            </td>
                            <td>
                                @if (item.Roles != null && item.Roles.Any())
                                {
                                    @foreach (var role in item.Roles)
                                    {
                                        <span class="badge bg-secondary me-1">@role.Role1</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">No roles assigned</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil me-1"></i>Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
